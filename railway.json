{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python main.py live --ticker ${TICKER:-AIV} --lookback 1 --multiplier 0.4 --enable-stop-loss --consecutive-limit 10 --enable-regime-filter --regime-threshold 1.5 --regime-lookback 5 --trade-size 1000",
    "restartPolicyType": "ON_FAILURE"
  }
}
